
<div class="modal-dialog">
  <div class="modal-content">
    <%= csrf_meta_tags %>
    <%= form_for @order, remote: true, html: { style: "display:inline;" } do |f| %>
        <div class="modal-body">
          <ul class="errors"></ul>

          <div class="form-group">
            <%= f.label :user_id, class:"control-label", value: "User ID" %>
            <%= f.text_field :user_id, class: "form-control", value: current_user.id, :readonly=>true %>
          </div>
          <div class="form-group">
            <%= f.label :order_name, class:"control-label" %>
            <%= f.text_field :order_name, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :API_KEY, class:"control-label" %>
            <%= f.text_field :api_key, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :API_SECRET_KEY, class:"control-label" %>
            <%= f.text_field :api_secret_key, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :exchange_type, class:"control-label", style: "margin-right:50px" %>
            <%= f.select :exchange_type, options_for_select(Order::CURRENCYPAIRS), class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :frequency_type, class: "control-label", style: "margin-right:50px" %>
            <%= f.select :frequency_type, options_for_select(Order::FREQUENCYTYPES), class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :invest_type, class:"control-label" %>
              <label class="radio-inline" style="margin-left: 50px">
                <%= f.radio_button :invest_type, 'percent', :checked => true %>Percent rate
              </label>
              <label class="radio-inline">
                <%= f.radio_button :invest_type, 'fixed' %>Fixed rate
              </label>
          </div>
          <div class="form-group">
            <%= f.label :amount, class:"control-label" %>
            <%= f.text_field :amount, class: "form-control" %>
          </div>
        </div>
        <div class="modal-footer">
          <%= f.submit class: "btn btn-primary"  %>
          <%= link_to "Cancel", "#", class: "btn", data: {dismiss: "modal"} %>
        </div>
    <% end %>
  </div>
</div>
